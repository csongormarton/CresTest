<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_test_picture"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_test_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:background="@color/color_tv_question_bg" />

    <CheckedTextView
        android:id="@+id/ctv_test_answerA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:background="@color/color_tv_answer_bg"
        android:padding="5dp"/>

    <CheckedTextView
        android:id="@+id/ctv_test_answerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:background="@color/color_tv_answer_bg"
        android:padding="5dp"/>

    <CheckedTextView
        android:id="@+id/ctv_test_answerC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:background="@color/color_tv_answer_bg"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_test_back"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/string_btn_test_back" />

        <Button
            android:id="@+id/btn_test_next"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/string_btn_test_next"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
</ScrollView>